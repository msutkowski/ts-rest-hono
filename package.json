{
  "name": "ts-rest-hono",
  "description": "Hono integration for @ts-rest",
  "version": "0.2.1",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && pkgroll",
    "clean": "rimraf dist",
    "denoify": "rimraf deno_dist && denoify && rimraf 'deno_dist/lib/test'",
    "test": "vitest --run",
    "prerelease": "pnpm denoify && pnpm build",
    "release": "np"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "devDependencies": {
    "@ts-rest/core": "^3.27.0",
    "@types/node": "^18.15.6",
    "denoify": "^1.6.1",
    "hono": "^3.4.0",
    "np": "^8.0.4",
    "pkgroll": "^1.9.0",
    "rimraf": "^4.4.1",
    "typescript": "^4",
    "vitest": "^0.34.1",
    "wrangler": "^2.13.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "hono": "^3.4.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
